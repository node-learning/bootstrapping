extends layout

block content
  h1= title
  p Login #{title}

  form(id='login')
    div(
      class='form-group'
    )
      div(class='form-group')
        label(for='email') email
        input(
          type='email'
          name='email'
          id='email'
        )

      div(class='form-group')
        label(for='password') Password
        input(
          type='text'
          name='password'
          id='password'
        )

    button(type='submit' class="btn btn-primary") Login
